{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "composer install"
  },
  "deploy": {
    "startCommand": "vendor/bin/heroku-php-apache2 public/",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "PHP_VERSION": "8.3"
  },
  "nixpacks": {
    "phases": {
      "install": {
        "nixPkgs": ["composer"]
      }
    },
    "startCommand": "vendor/bin/heroku-php-apache2 public/"
  }
}
